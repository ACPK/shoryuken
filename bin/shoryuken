#!/usr/bin/env ruby

require 'yaml'
require 'shoryuken'

config = YAML.load File.read(File.join(File.expand_path('../..', __FILE__), 'shoryuken.yml'))

AWS.config(config['aws'])

begin
  Shoryuken::Launcher.new(config).run
rescue => e
  raise e if $DEBUG
  STDERR.puts e.message
  STDERR.puts e.backtrace.join("\n")
  exit 1
end

sleep
